<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/style/styles.css">
    <title>Document</title>
</head>

<body class="d-flex flex-column justify-content-center align-items-center text-center">
    <header><h1 class="mt-3">Update Games</h1></header>
    <br>
    <div class="navbar mb-3">
        <%- include('partials/navbar') %>
    </div>
  
    <!-- filepath: /workspaces/CST336FinalProject/views/addgame.ejs -->
     <form>
<!-- <form id="updateGameForm" action="/addgame" method="POST"> -->
    <label>Name of the Game</label>
    <br>
    <input id="name" type="text" name="name" required>
    <br>
    <label>Genre</label>
    <br>
    <select id="genre" name="genre" required>
        <option value="Action">Action</option>
        <option value="Adventure">Adventure</option>
        <option value="RPG">RPG</option>
        <option value="Shooter">Shooter</option>
        <option value="Strategy">Strategy</option>
        <option value="Simulation">Simulation</option>
        <option value="Sports">Sports</option>
        <option value="Racing">Racing</option>
        <option value="Platformer">Platformer</option>
        <option value="Puzzle">Puzzle</option>
        <option value="Casual">Casual</option>
        <option value="Party">Party</option>
        <option value="Survival">Survival</option>
        <option value="Horror">Horror</option>
        <option value="Battle Royale">Battle Royale</option>
        <option value="Other">Other</option>
    </select>
    <br>
    <label>Studio name</label>
    <br>
    <input id="studio_name" type="text" name="studio_name" required>
    <br>
    <label>Studio Address</label>
    <br>
    <textarea name="address" id="address" required></textarea>
    <br>
    <button class="btn btn-primary">Update</button>
</form>
<br>
<%- include('partials/footer') %>
</body>
</html>
